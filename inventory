        <section id="inventory" class="inventory">
            <h2>Inventory Management</h2>
            <div class="inventory-stats">
                <?php
                // Database configuration
                $servername = "localhost";
                $username = "root";
                $password = "";
                $dbname = "fashion_store";

                // Sample inventory data (in a real project, this would come from database)
                $inventory_data = array(
                    array("Summer Dress", 49.99, 100, 75, 25, 3749.25),
                    array("Men's Shirt", 39.99, 150, 120, 30, 4798.80),
                    array("Women's Jeans", 59.99, 80, 60, 20, 3599.40),
                    array("Fashion Accessories", 19.99, 200, 150, 50, 2998.50),
                    array("Winter Jacket", 89.99, 60, 40, 20, 3599.60),
                    array("Sports Shoes", 69.99, 120, 90, 30, 6299.10)
                );

                // Calculate totals
                $total_revenue = 0;
                $total_sold = 0;
                $total_in_stock = 0;

                foreach ($inventory_data as $item) {
                    $total_revenue += $item[5];
                    $total_sold += $item[3];
                    $total_in_stock += $item[4];
                }
                ?>
                
                <div class="stat-card">
                    <h3>Total Revenue</h3>
                    <p class="stat-number">$<?php echo number_format($total_revenue, 2); ?></p>
                </div>
                
                <div class="stat-card">
                    <h3>Total Items Sold</h3>
                    <p class="stat-number"><?php echo $total_sold; ?></p>
                </div>
                
                <div class="stat-card">
                    <h3>Items in Stock</h3>
                    <p class="stat-number"><?php echo $total_in_stock; ?></p>
                </div>
            </div>

            <div class="inventory-table">
                <h3>Detailed Inventory</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity Bought</th>
                            <th>Quantity Sold</th>
                            <th>In Stock</th>
                            <th>Revenue</th>
                        </tr>
                    </thead>
                    <tbody>
                        <?php
                        foreach ($inventory_data as $item) {
                            echo "<tr>";
                            echo "<td>" . $item[0] . "</td>";
                            echo "<td>$" . number_format($item[1], 2) . "</td>";
                            echo "<td>" . $item[2] . "</td>";
                            echo "<td>" . $item[3] . "</td>";
                            echo "<td>" . $item[4] . "</td>";
                            echo "<td>$" . number_format($item[5], 2) . "</td>";
                            echo "</tr>";
                        }
                        ?>
                    </tbody>
                </table>
            </div>
        </section>

        <section id="products" class="products">
            <h2>Our Products</h2>
            <div class="product-grid">
                <?php
                // Sample products data
                $products_data = array(
                    array("Summer Dress", "Light and comfortable dresses for sunny days", 49.99, "https://via.placeholder.com/300x400/FF6B6B/white?text=Summer+Dress", 25, 75),
                    array("Men's Shirt", "Formal and casual shirts for every occasion", 39.99, "https://via.placeholder.com/300x400/4ECDC4/white?text=Men+Shirts", 30, 120),
                    array("Women's Jeans", "Comfortable and stylish denim collection", 59.99, "https://via.placeholder.com/300x400/45B7D1/white?text=Women+Jeans", 20, 60),
                    array("Fashion Accessories", "Complete your look with our accessories", 19.99, "https://via.placeholder.com/300x400/96CEB4/white?text=Accessories", 50, 150),
                    array("Winter Jacket", "Warm and stylish jackets for cold weather", 89.99, "https://via.placeholder.com/300x400/FFA726/white?text=Winter+Jacket", 20, 40),
                    array("Sports Shoes", "Comfortable shoes for sports and casual wear", 69.99, "https://via.placeholder.com/300x400/7E57C2/white?text=Sports+Shoes", 30, 90)
                );

                foreach ($products_data as $product) {
                    echo '<div class="product-card">';
                    echo '<img src="' . $product[3] . '" alt="' . $product[0] . '">';
                    echo '<h3>' . $product[0] . '</h3>';
                    echo '<p>' . $product[1] . '</p>';
                    echo '<span class="price">$' . number_format($product[2], 2) . '</span>';
                    echo '<div class="stock-info">';
                    echo '<span class="in-stock">In Stock: ' . $product[4] . '</span>';
                    echo '<span class="sold">Sold: ' . $product[5] . '</span>';
                    echo '</div>';
                    echo '</div>';
                }
                ?>
            </div>
        </section>
